{
  "name": "spm-simulator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "perf:bundle": "node scripts/perf/check-bundle.mjs",
    "perf:risk-benchmark": "node scripts/perf/benchmark-risk-chips.mjs",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:frontend": "node scripts/tests/frontend-contract.mjs",
    "test:e2e:smoke": "node scripts/tests/e2e-smoke.mjs",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check:workflow": "npm run build && npm run perf:bundle && npm run perf:risk-benchmark && cargo check --manifest-path src-tauri/Cargo.toml",
    "test:backend": "cargo test --manifest-path src-tauri/Cargo.toml -- --test-threads=1",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml --lib --tests -- -D warnings",
    "fmt:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml -- --check",
    "check:quality": "npm run format:check && npm run lint && npm run fmt:rust && npm run lint:rust && npm run test:unit:coverage && npm run check:workflow && npm run test:frontend && npm run test:e2e:smoke && npm run test:backend",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "antd": "^6.3.0",
    "dayjs": "^1.11.19",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "react-window": "^2.2.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@tauri-apps/cli": "^2.10.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
